{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        }
      ]
    },
    "game:allow-kill-game",
    "game:allow-get-regsk",
    "game:allow-get-uid",
    "game:allow-set-usd",
    "game:allow-set-regsk",
    "game:allow-auto-join",
    "game:allow-auto-open",
    "game:allow-auto-login",
    "game:allow-auto-setup",
    "game:allow-launch-game",
    "game:allow-get-game",
    "game:allow-set-hotkey",
    "game:allow-is-ingame",
    "global-shortcut:default",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-unregister-all"
  ]
}